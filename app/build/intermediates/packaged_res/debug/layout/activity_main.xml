<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"
    android:background="#193946">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/inside_logo"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="95dp"/>

        <TextView
            android:id="@+id/pangeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/archivo"
            android:text="Pangasinan - English"
            android:textColor="#F8F8F8"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/dic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/archivo"
            android:text="Dictionary"
            android:textColor="#F8F8F8"
            android:textSize="27sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btnsearchbck"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:fontFamily="@font/archivo"
            android:padding="10dp"
            android:text="Search"
            android:textColor="#FF7A1D"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="85dp"
            android:background="@drawable/trivia"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include layout="@layout/main_nav_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>